<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.subd.admin_panels.UserManagementController"
      spacing="20"
      style="-fx-padding: 25; -fx-background-color: #f8f9fa;"
      prefWidth="800"
      prefHeight="600"
      alignment="TOP_CENTER">

    <Label text="Управление пользователями"
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator style="-fx-background-color: #bdc3c7;" prefWidth="750"/>

    <!-- Панель действий -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 10 0;">
        <Button text="Добавить пользователя"
                onAction="#handleAddUser"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
        <Button text="Редактировать выбранного"
                onAction="#handleEditUser"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
        <Button text="Активировать/Деактивировать аккаунт"
                onAction="#handleActivationUser"
                style="-fx-background-color: red; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
        <Button text="Обновить список"
                onAction="#handleRefresh"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"/>
    </HBox>

    <!-- Таблица пользователей -->
    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS"
               style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #bdc3c7;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="80"/>
            <TableColumn fx:id="usernameColumn" text="Логин" prefWidth="250"/>
            <TableColumn fx:id="roleColumn" text="Роль" prefWidth="200"/>
            <TableColumn fx:id="hotelColumn" text="Отель" prefWidth="500"/>
            <TableColumn fx:id="userLockedColumn" text="Заблокирован" prefWidth="100"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Статусная строка -->
    <Label fx:id="statusLabel"
           style="-fx-text-fill: #2c3e50; -fx-font-size: 12; -fx-padding: 10 0 0 0; -fx-font-style: italic;"
           maxWidth="750"
           wrapText="true"/>
</VBox>