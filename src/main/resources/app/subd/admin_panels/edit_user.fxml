<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.subd.admin_panels.EditUserController"
      spacing="20"
      style="-fx-padding: 25; -fx-background-color: #f8f9fa;"
      prefWidth="400"
      prefHeight="450"
      alignment="TOP_CENTER">

    <Label fx:id="titleLabel" text="Редактирование пользователя"
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Separator style="-fx-background-color: #bdc3c7;" prefWidth="350"/>

    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints prefWidth="120" halignment="RIGHT"/>
            <ColumnConstraints prefWidth="250" halignment="LEFT"/>
        </columnConstraints>

        <!-- Логин -->
        <Label text="Логин:"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField"
                   style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #bdc3c7; -fx-padding: 5;"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Роль -->
        <Label text="Роль:"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleComboBox"
                  style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #bdc3c7; -fx-padding: 5;"
                  prefWidth="250"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Новый пароль -->
        <Label text="Новый пароль:"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <PasswordField fx:id="newPasswordField"
                       style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #bdc3c7; -fx-padding: 5;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Подтверждение пароля -->
        <Label text="Повторите пароль:"
               style="-fx-font-weight: bold; -fx-text-fill: #34495e;"
               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordRepeated"
                       style="-fx-background-radius: 4; -fx-border-radius: 4; -fx-border-color: #bdc3c7; -fx-padding: 5;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <Label fx:id="statusLabel"
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12; -fx-padding: 10 0 0 0;"
           maxWidth="350"
           wrapText="true"/>

    <HBox spacing="15" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
        <Button text="Отмена"
                onAction="#handleCancel"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"
                minWidth="80"/>
        <Button fx:id="saveButton"
                text="Сохранить изменения"
                onAction="#handleSaveUser"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 4; -fx-padding: 8 15;"
                minWidth="80"/>
    </HBox>
</VBox>