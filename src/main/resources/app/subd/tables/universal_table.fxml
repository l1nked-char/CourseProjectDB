<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.subd.components.UniversalTableController"
      spacing="10"
      style="-fx-padding: 10;">

    <VBox fx:id="filtersContainer" spacing="10">
        <Label text="Фильтры:" style="-fx-font-weight: bold;"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Поиск..." HBox.hgrow="ALWAYS"/>
        <Button fx:id="clearFiltersButton" text="Очистить фильтры" onAction="#handleClearFilters"/>
        <Button fx:id="addButton" text="Добавить" onAction="#handleAdd"/>
        <Button fx:id="editButton" text="Редактировать" onAction="#handleEdit"/>
        <Button fx:id="toggleActiveButton" text="Блокировать/Разблокировать" onAction="#handleToggleActive" visible="false"/>
        <Button fx:id="refreshButton" text="Обновить" onAction="#handleRefresh"/>
    </HBox>

      <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
         <Button fx:id="prevPageButton" mnemonicParsing="false" text="&lt; Назад" />
         <Label fx:id="pageInfoLabel" text="Страница 1" />
         <Button fx:id="nextPageButton" mnemonicParsing="false" text="Вперед &gt;" />
      </HBox>
      <Label fx:id="statusLabel" text="Статус: Готов" />
</VBox>