<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.subd.tables.EditConvenienceController" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label fx:id="titleLabel" text="Редактирование удобства" style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="100.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="200.0" prefWidth="200.0"/>
        </columnConstraints>

        <Label text="Название:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Введите название удобства" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10.0">
        <Button fx:id="saveButton" onAction="#handleSave" mnemonicParsing="false" text="Сохранить" />
        <Button fx:id="cancelButton" onAction="#handleCancel" mnemonicParsing="false" text="Отмена" />
    </HBox>

    <Label fx:id="statusLabel" />
</VBox>