<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.subd.tables.AddRoomController" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Добавление комнаты" style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <Label fx:id="hotelLabel" text="Отель:" style="-fx-font-weight: bold;" />

    <GridPane hgap="10.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="150.0" prefWidth="150.0"/>
            <ColumnConstraints minWidth="200.0" prefWidth="200.0"/>
        </columnConstraints>

        <Label text="Номер комнаты:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="roomNumberField" promptText="Введите номер комнаты" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Макс. человек:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="maxPeopleField" promptText="Введите максимальное количество человек" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Цена за человека:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="pricePerPersonField" promptText="Введите цену за человека" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Тип комнаты:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeOfRoomComboBox" promptText="Выберите тип комнаты" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10.0">
        <Button fx:id="saveButton" onAction="#handleSave" mnemonicParsing="false" text="Сохранить" />
        <Button fx:id="cancelButton" onAction="#handleCancel" mnemonicParsing="false" text="Отмена" />
    </HBox>

    <Label fx:id="statusLabel" />
</VBox>