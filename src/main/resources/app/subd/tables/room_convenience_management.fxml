<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.subd.tables.RoomConvenienceManagementController" spacing="10.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Управление удобствами номеров" style="-fx-font-size: 16; -fx-font-weight: bold;" />

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Выберите отель:" />
        <ComboBox fx:id="hotelComboBox" promptText="Выберите отель" prefWidth="300.0" />
    </HBox>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Выберите номер:" />
        <ComboBox fx:id="roomComboBox" promptText="Выберите номер" prefWidth="300.0" />
    </HBox>

    <HBox spacing="10.0">
        <Button fx:id="addButton" mnemonicParsing="false" text="Добавить" />
        <Button fx:id="editButton" mnemonicParsing="false" text="Редактировать" />
        <Button fx:id="refreshButton" mnemonicParsing="false" text="Обновить" />
    </HBox>

    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="convNameColumn" text="Удобство" />
            <TableColumn fx:id="priceColumn" text="Цена" />
            <TableColumn fx:id="amountColumn" text="Количество" />
            <TableColumn fx:id="startDateColumn" text="Дата начала" />
        </columns>
    </TableView>

    <Label fx:id="statusLabel" />
</VBox>