<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.subd.employee_panels.CheckInWizardController"
      spacing="15" style="-fx-padding: 20;">

    <Label fx:id="stepLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    <Separator/>

    <TabPane fx:id="wizardTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Выбор клиента">
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                    <Button text="Добавить клиента" onAction="#handleAddClientInWizard"
                            style="-fx-padding: 8px 16px;"/>
                    <Button text="Выбрать клиента" onAction="#handleSelectClient"
                            style="-fx-padding: 8px 16px; -fx-background-color: #3498db; -fx-text-fill: white;"
                            disable="true" fx:id="selectClientButton"/>
                    <Button text="Редактировать клиента" onAction="#handleEditClientInWizard"
                            style="-fx-padding: 8px 16px; -fx-background-color: #f39c12; -fx-text-fill: white;"
                            disable="true" fx:id="editClientButton"/>
                </HBox>
                <VBox fx:id="clientTableContainer" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab text="Выбор комнаты" disable="true" fx:id="roomTab">
            <VBox spacing="10">
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10;">
                    <Button text="Выбрать комнату" onAction="#handleSelectRoom"
                            style="-fx-padding: 8px 16px; -fx-background-color: #3498db; -fx-text-fill: white;"
                            disable="true" fx:id="selectRoomButton"/>
                </HBox>
                <VBox fx:id="roomTableContainer" VBox.vgrow="ALWAYS"/>
            </VBox>
        </Tab>
        <Tab text="Подтверждение" disable="true" fx:id="confirmTab">
            <VBox spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
                <Label text="Подтверждение заселения"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <VBox fx:id="confirmationInfo" spacing="10"
                      style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;"/>
                <Button text="Подтвердить заселение" onAction="#handleConfirmCheckIn"
                        style="-fx-font-size: 14px; -fx-padding: 10px 30px; -fx-background-color: #27ae60; -fx-text-fill: white;"/>
            </VBox>
        </Tab>
    </TabPane>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button fx:id="prevButton" text="Назад" onAction="#handlePrev"
                style="-fx-padding: 8px 16px;"/>
        <Button fx:id="nextButton" text="Далее" onAction="#handleNext"
                defaultButton="true" style="-fx-padding: 8px 16px; -fx-background-color: #3498db; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" text="Отмена" onAction="#handleCancel"
                cancelButton="true" style="-fx-padding: 8px 16px; -fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>

    <Label fx:id="statusLabel" style="-fx-text-fill: #666; -fx-font-style: italic;"/>
</VBox>